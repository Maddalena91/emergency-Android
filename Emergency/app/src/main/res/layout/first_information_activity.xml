<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">


    <TextView
        android:id="@+id/twfunzionamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Come funziona l'app?"
        android:textSize="30dp"
         />

    <ImageView
        android:id="@+id/image"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-9dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="245dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/twdescrizione"
        android:layout_width="366dp"
        android:layout_height="156dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="501dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="73dp"
        android:gravity="center_horizontal"
        android:text="Emergency nasce con lo scopo di aiutare i soccorritori rendendo le ricerche più efficienti. Ciò avverrà utilizzando la posizione segnalata dal tuo dispositivo."
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>